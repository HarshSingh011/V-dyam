<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SecondPage">

        <TextView
            android:fontFamily="@font/poppins_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Login Here"
            android:textAlignment="center"
            android:textColor="#1F41BB"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:fontFamily="@font/poppins_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Welcome back youâ€™ve\nbeen missed!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="12dp"
            />

        <EditText
            android:background="@drawable/edittext_prop"
            android:fontFamily="@font/poppins_black"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Email"
            android:textSize="25sp"
            android:textColorHint="#757575"
            android:inputType="textPersonName"
            android:layout_marginTop="220dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:background="@drawable/edittext_prop"
            android:fontFamily="@font/poppins_black"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="320dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textSize="25sp"
            android:textColorHint="#757575"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:text="Forgot your password?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textColor="#1F41BB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="end"
            />

        <Button
            android:fontFamily="@font/poppins_black"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="460dp"
            android:backgroundTint="#1f41bb"
            android:text="Login"
            android:textSize="18sp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="12dp"
            />

        <TextView
            android:id="@+id/createAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:text="Create new account"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:text="Or continue with"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#1F41BB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:layout_width="60dp"
            android:background="@drawable/icon_set"
            android:padding="10dp"
            android:layout_height="60dp"
            android:layout_marginTop="645dp"
            android:src="@drawable/googler"
            android:layout_marginRight="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:layout_width="60dp"
            android:padding="10dp"
            android:layout_height="60dp"
            android:layout_marginTop="645dp"
            android:scaleType="fitCenter"
            android:background="@drawable/icon_set"
            android:src="@drawable/facr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:layout_width="60dp"
            android:padding="10dp"
            android:layout_height="60dp"
            android:layout_marginTop="645dp"
            android:background="@drawable/icon_set"
            android:src="@drawable/appler"
            android:layout_marginLeft="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
