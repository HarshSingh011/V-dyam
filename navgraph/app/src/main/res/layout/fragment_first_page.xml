<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FirstPage">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:src="@drawable/wlc"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:fontFamily="@font/poppins_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:text="Discover Your \nDream Job here"
            android:textAlignment="center"
            android:textColor="#1F41BB"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:fontFamily="@font/poppins_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:text="Explore all the existing job roles based on your\ninterest and study major"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="11.20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:fontFamily="@font/poppins_black"
            android:id="@+id/log"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            android:backgroundTint="#1f41bb"
            android:layout_marginRight="180dp"
            android:text="Login"
            android:textSize="22sp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/Reg"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="6dp" />

        <Button
            android:fontFamily="@font/poppins_black"
            android:id="@+id/Reg"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="180dp"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="22sp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="@id/log"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="6dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
